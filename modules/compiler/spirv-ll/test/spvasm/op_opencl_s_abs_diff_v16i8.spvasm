; RUN: %if online-spirv-as %{ spirv-as --target-env %spv_tgt_env -o %spv_file_s %s %}
; RUN: %if online-spirv-as %{ spirv-val %spv_file_s %}
; RUN: spirv-ll-tool -a OpenCL -b 64 %spv_file_s | FileCheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                        OpCapability Int8
                        OpCapability Vector16
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %s_abs_diff_v16i8 "s_abs_diff_v16i8"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
                %i8_t = OpTypeInt 8 0
             %v16i8_t = OpTypeVector %i8_t 16
     %s_abs_diff_fn_t = OpTypeFunction %void_t
                %i8_2 = OpConstant %i8_t 2
                %i8_5 = OpConstant %i8_t 5
             %v16i8_2 = OpConstantComposite %v16i8_t %i8_2 %i8_2 %i8_2 %i8_2 %i8_2 %i8_2 %i8_2 %i8_2 %i8_2 %i8_2 %i8_2 %i8_2 %i8_2 %i8_2 %i8_2 %i8_2
             %v16i8_5 = OpConstantComposite %v16i8_t %i8_5 %i8_5 %i8_5 %i8_5 %i8_5 %i8_5 %i8_5 %i8_5 %i8_5 %i8_5 %i8_5 %i8_5 %i8_5 %i8_5 %i8_5 %i8_5

; All functions
    %s_abs_diff_v16i8 = OpFunction %void_t None %s_abs_diff_fn_t
; CHECK: define spir_kernel void @s_abs_diff_v16i8()
                   %2 = OpLabel
                   %3 = OpExtInst %v16i8_t %1 s_abs_diff %v16i8_2 %v16i8_5
; CHECK: = call spir_func <16 x i8> @_Z8abs_diffDv16_cS_(<16 x i8> {{<(i8 2(, )?)+>|splat \(i8 2\)}}, <16 x i8> {{<(i8 5(, )?)+>|splat \(i8 5\)}})
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
