; RUN: %if online-spirv-as %{ spirv-as --target-env %spv_tgt_env -o %spv_file_s %s %}
; RUN: %if online-spirv-as %{ spirv-val %spv_file_s %}
; RUN: spirv-ll-tool -a OpenCL -b 64 %spv_file_s | FileCheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                        OpCapability Int8
                        OpCapability Int16
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %u_upsample_v3i16 "u_upsample_v3i16"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
                %i8_t = OpTypeInt 8 0
               %i16_t = OpTypeInt 16 0
              %v3i8_t = OpTypeVector %i8_t 3
             %v3i16_t = OpTypeVector %i16_t 3
     %u_upsample_fn_t = OpTypeFunction %void_t
                %i8_3 = OpConstant %i8_t 3
                %i8_4 = OpConstant %i8_t 4
              %v3i8_3 = OpConstantComposite %v3i8_t %i8_3 %i8_3 %i8_3
              %v3i8_4 = OpConstantComposite %v3i8_t %i8_4 %i8_4 %i8_4

; All functions
    %u_upsample_v3i16 = OpFunction %void_t None %u_upsample_fn_t
; CHECK: define spir_kernel void @u_upsample_v3i16()
                   %2 = OpLabel
                   %3 = OpExtInst %v3i16_t %1 u_upsample %v3i8_3 %v3i8_4
; CHECK: {{%.*}} = call spir_func <3 x i16> @_Z8upsampleDv3_hS_(<3 x i8> <i8 3, i8 3, i8 3>, <3 x i8> <i8 4, i8 4, i8 4>)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
