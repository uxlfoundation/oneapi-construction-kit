; RUN: %if online-spirv-as %{ spirv-as --target-env %spv_tgt_env -o %spv_file_s %s %}
; RUN: %if online-spirv-as %{ spirv-val %spv_file_s %}
; RUN: spirv-ll-tool -a OpenCL -b 64 %spv_file_s | FileCheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %ldexp_float "ldexp_float"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
               %int_t = OpTypeInt 32 0
             %float_t = OpTypeFloat 32
          %ldexp_fn_t = OpTypeFunction %void_t
               %int_1 = OpConstant %int_t 1
             %float_2 = OpConstant %float_t 2

; All functions
         %ldexp_float = OpFunction %void_t None %ldexp_fn_t
; CHECK: define spir_kernel void @ldexp_float()
                   %2 = OpLabel
                   %3 = OpExtInst %float_t %1 ldexp %float_2 %int_1
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func float @_Z5ldexpfi(float 2.000000e+00, i32 1)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
