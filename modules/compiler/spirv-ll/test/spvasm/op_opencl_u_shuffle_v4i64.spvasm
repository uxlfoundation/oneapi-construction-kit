; RUN: %if online-spirv-as %{ spirv-as --target-env %spv_tgt_env -o %spv_file_s %s %}
; RUN: %if online-spirv-as %{ spirv-val %spv_file_s %}
; RUN: spirv-ll-tool -a OpenCL -b 64 %spv_file_s | FileCheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                        OpCapability Int64
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %u_shuffle_v4i64 "u_shuffle_v4i64"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
               %i64_t = OpTypeInt 64 0
             %v4i64_t = OpTypeVector %i64_t 4
      %u_shuffle_fn_t = OpTypeFunction %void_t
               %i64_3 = OpConstant %i64_t 3
               %i64_4 = OpConstant %i64_t 4
             %v4i64_3 = OpConstantComposite %v4i64_t %i64_3 %i64_3 %i64_3 %i64_3
             %v4i64_4 = OpConstantComposite %v4i64_t %i64_4 %i64_4 %i64_4 %i64_4

; All functions
     %u_shuffle_v4i64 = OpFunction %void_t None %u_shuffle_fn_t
; CHECK: define spir_kernel void @u_shuffle_v4i64()
                   %2 = OpLabel
                   %3 = OpExtInst %v4i64_t %1 shuffle %v4i64_3 %v4i64_4
; CHECK: = call spir_func <4 x i64> @_Z7shuffleDv4_mS_(<4 x i64> {{<(i64 3(, )?)+>|splat \(i64 3\)}}, <4 x i64> {{<(i64 4(, )?)+>|splat \(i64 4\)}})
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
