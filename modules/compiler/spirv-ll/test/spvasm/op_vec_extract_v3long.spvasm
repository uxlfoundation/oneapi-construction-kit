; RUN: %if online-spirv-as %{ spirv-as --target-env %spv_tgt_env -o %spv_file_s %s %}
; RUN: %if online-spirv-as %{ spirv-val %spv_file_s %}
; RUN: spirv-ll-tool -a OpenCL -b 64 -c Float64 -c Int64 %spv_file_s | FileCheck %s
            OpCapability Kernel
            OpCapability Float64
            OpCapability Int64
            OpMemoryModel Logical OpenCL
            OpEntryPoint Kernel %main "main"
            OpExecutionMode %main LocalSize 1 1 1
            OpSource GLSL 450
            OpName %main "main"
            OpName %a "a"
               OpName %res "res"
       %void = OpTypeVoid
          %3 = OpTypeFunction %void
        %long = OpTypeInt 64 1
     %idx_ty = OpTypeInt 32 0
         %v3 = OpTypeVector %long 3
     %ptr_v3 = OpTypePointer Function %v3
          %8 = OpConstant %long 4200000000
          %9 = OpConstant %long 4200000000
         %10 = OpConstant %long 4200000000
         %11 = OpConstant %idx_ty 1
         %12 = OpConstantComposite %v3 %8 %9 %10
    %ptr_long = OpTypePointer Function %long
       %main = OpFunction %void None %3
         %16 = OpLabel
          %a = OpVariable %ptr_v3 Function
        %res = OpVariable %ptr_long Function
               OpStore %a %12
         %19 = OpLoad %v3 %a
         %20 = OpVectorExtractDynamic %long %19 %11
               OpStore %res %20
               OpReturn
               OpFunctionEnd
; CHECK: ; ModuleID = '{{.*}}'
; CHECK: define spir_kernel void @main()
; CHECK: = alloca <3 x i64>
; CHECK: = alloca i64
; CHECK: store <3 x i64> {{<(i64 4200000000(, )?)+>|splat \(i64 4200000000\)}}, ptr {{[%@].*}}
; CHECK: = load <3 x i64>, ptr {{[%@].*}}
; CHECK: = extractelement <3 x i64> {{[%@].*}}, i32 1
; CHECK: store i64 {{[%@].*}}, ptr {{[%@].*}}
; CHECK: ret void
