; RUN: %if online-spirv-as %{ spirv-as --target-env %spv_tgt_env -o %spv_file_s %s %}
; RUN: spirv-ll-tool -a OpenCL -b 64 %spv_file_s | FileCheck %s
                               OpCapability Addresses
                               OpCapability Kernel
                               OpCapability Int64
                          %1 = OpExtInstImport "OpenCL.std"
                               OpMemoryModel Physical64 OpenCL
                               OpEntryPoint Kernel %get_num_sub_groups_fn "get_num_sub_groups_fn" %__spirv_BuiltInSubgroupID
                               OpDecorate %__spirv_BuiltInNumSubgroups BuiltIn NumSubgroups
                     %size_t = OpTypeInt 64 0
                 %size_ptr_t = OpTypePointer Input %size_t
                     %void_t = OpTypeVoid
    %get_num_sub_groups_fn_t = OpTypeFunction %void_t

%__spirv_BuiltInNumSubgroups = OpVariable %size_ptr_t Input
      %get_num_sub_groups_fn = OpFunction %void_t None %get_num_sub_groups_fn_t
                          %2 = OpLabel
;CHECK: {{%[a-zA-Z0-9]+}} = call spir_func i32 @_Z18get_num_sub_groupsv()
                        %res = OpLoad %size_t %__spirv_BuiltInNumSubgroups
                                 OpReturn
                                 OpFunctionEnd

