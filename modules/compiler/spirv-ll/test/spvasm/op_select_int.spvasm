; RUN: %if online-spirv-as %{ spirv-as --target-env %spv_tgt_env -o %spv_file_s %s %}
; RUN: %if online-spirv-as %{ spirv-val %spv_file_s %}
; RUN: spirv-ll-tool -a OpenCL -b 64 -c Float64 -c Int64 %spv_file_s | FileCheck %s
            OpCapability Kernel
            OpCapability Float64
            OpCapability Int64
            OpMemoryModel Logical OpenCL
            OpEntryPoint Kernel %main "main"
            OpExecutionMode %main LocalSize 1 1 1
            OpSource GLSL 450
            OpName %main "main"
            OpName %a "a"
               OpName %b "b"
       %void = OpTypeVoid
          %3 = OpTypeFunction %void
       %bool = OpTypeBool
%_ptr_Function_bool = OpTypePointer Function %bool
          %9 = OpConstantTrue %bool
        %uint = OpTypeInt 32 0
    %ptr_uint = OpTypePointer Function %uint
         %17 = OpConstant %uint 42
         %19 = OpConstant %uint 42
       %main = OpFunction %void None %3
          %5 = OpLabel
          %a = OpVariable %_ptr_Function_bool Function
          %b = OpVariable %ptr_uint Function
               OpStore %a %9
         %14 = OpLoad %bool %a
         %15 = OpSelect %uint %14 %17 %19 ; testing this
               OpStore %b %15
               OpReturn
               OpFunctionEnd
; CHECK: ; ModuleID = '{{.*}}'
; CHECK: define spir_kernel void @main()
; CHECK: = alloca i1
; CHECK: = alloca i32
; CHECK: store i1 true, ptr {{[%@].*}}
; CHECK: = load i1, ptr {{[%@].*}}
; CHECK: = select i1 {{[%@].*}}, i32 42, i32 42
; CHECK: store i32 {{[%@].*}}, ptr {{[%@].*}}
; CHECK: ret void
