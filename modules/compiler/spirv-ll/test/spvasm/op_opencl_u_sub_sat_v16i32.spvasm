; RUN: %if online-spirv-as %{ spirv-as --target-env %spv_tgt_env -o %spv_file_s %s %}
; RUN: %if online-spirv-as %{ spirv-val %spv_file_s %}
; RUN: spirv-ll-tool -a OpenCL -b 64 %spv_file_s | FileCheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                        OpCapability Vector16
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %u_sub_sat_v16i32 "u_sub_sat_v16i32"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
               %i32_t = OpTypeInt 32 0
            %v16i32_t = OpTypeVector %i32_t 16
      %u_sub_sat_fn_t = OpTypeFunction %void_t
               %i32_3 = OpConstant %i32_t 3
               %i32_4 = OpConstant %i32_t 4
            %v16i32_3 = OpConstantComposite %v16i32_t %i32_3 %i32_3 %i32_3 %i32_3 %i32_3 %i32_3 %i32_3 %i32_3 %i32_3 %i32_3 %i32_3 %i32_3 %i32_3 %i32_3 %i32_3 %i32_3
            %v16i32_4 = OpConstantComposite %v16i32_t %i32_4 %i32_4 %i32_4 %i32_4 %i32_4 %i32_4 %i32_4 %i32_4 %i32_4 %i32_4 %i32_4 %i32_4 %i32_4 %i32_4 %i32_4 %i32_4

; All functions
    %u_sub_sat_v16i32 = OpFunction %void_t None %u_sub_sat_fn_t
; CHECK: define spir_kernel void @u_sub_sat_v16i32()
                   %2 = OpLabel
                   %3 = OpExtInst %v16i32_t %1 u_sub_sat %v16i32_3 %v16i32_4
; CHECK: = call spir_func <16 x i32> @_Z7sub_satDv16_jS_(<16 x i32> {{<(i32 3(, )?)+>|splat \(i32 3\)}}, <16 x i32> {{<(i32 4(, )?)+>|splat \(i32 4\)}})
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
