; RUN: %if online-spirv-as %{ spirv-as --target-env %spv_tgt_env -o %spv_file_s %s %}
; RUN: %if online-spirv-as %{ spirv-val %spv_file_s %}
; RUN: spirv-ll-tool -a OpenCL -b 64 %spv_file_s | FileCheck %s
                                OpCapability Addresses
                                OpCapability Kernel
                                OpCapability Int64
                           %1 = OpExtInstImport "OpenCL.std"
                                OpMemoryModel Physical64 OpenCL
                                OpEntryPoint Kernel %get_local_linear_id_fn "get_local_linear_id_fn" %__spirv_BuiltInLocalLinearID
                                OpDecorate %__spirv_BuiltInLocalLinearID BuiltIn LocalInvocationIndex
                      %size_t = OpTypeInt 64 0
                  %size_ptr_t = OpTypePointer Input %size_t
                      %void_t = OpTypeVoid
    %get_local_linear_id_fn_t = OpTypeFunction %void_t

%__spirv_BuiltInLocalLinearID = OpVariable %size_ptr_t Input
      %get_local_linear_id_fn = OpFunction %void_t None %get_local_linear_id_fn_t
                           %2 = OpLabel
;CHECK: = call spir_func i64 @_Z19get_local_linear_idv()
                         %res = OpLoad %size_t %__spirv_BuiltInLocalLinearID
                                OpReturn
                                OpFunctionEnd
