; RUN: %if online-spirv-as %{ spirv-as --target-env %spv_tgt_env -o %spv_file_s %s %}
; RUN: %if online-spirv-as %{ spirv-val %spv_file_s %}
; RUN: spirv-ll-tool -a OpenCL -c Kernel -c Float64 -b 64 %spv_file_s | FileCheck %s
               OpCapability Addresses
               OpCapability Kernel
               OpCapability Float64
          %1 = OpExtInstImport "OpenCL.std"
               OpMemoryModel Physical64 OpenCL
               OpEntryPoint Kernel %8 "isinf"
               OpSource OpenCL_C 102000
               OpName %res "res"
       %uint = OpTypeInt 32 0
     %uint_0 = OpConstant %uint 0
     %uint_1 = OpConstant %uint 1
       %void = OpTypeVoid
     %double = OpTypeFloat 64
    %double2 = OpTypeVector %double 2
          %7 = OpTypeFunction %void
       %bool = OpTypeBool
      %bool2 = OpTypeVector %bool 2
%double_0x1p_1024 = OpConstant %double 0x1p+1024
  %doublevec = OpConstantComposite %double2 %double_0x1p_1024 %double_0x1p_1024 
          %8 = OpFunction %void None %7
         %11 = OpLabel
        %res = OpIsInf %bool2 %doublevec
               OpReturn
               OpFunctionEnd
; CHECK: define spir_kernel void @isinf()
; CHECK: [[RES:%.*]] = call spir_func <2 x i64> @_Z5isinfDv2_d(<2 x double> {{<(double 0x7FF0000000000000(, )?)+>|splat \(double 0x7FF0000000000000\)}})
; CHECK: = trunc <2 x i64> [[RES]] to <2 x i1>
; CHECK: declare spir_func <2 x i64> @_Z5isinfDv2_d(<2 x double>)
