; RUN: %if online-spirv-as %{ spirv-as --target-env %spv_tgt_env -o %spv_file_s %s %}
; RUN: %if online-spirv-as %{ spirv-val %spv_file_s %}
; RUN: spirv-ll-tool -a OpenCL -b 64 %spv_file_s | FileCheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                        OpCapability Int16
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %u_sub_sat_v2i16 "u_sub_sat_v2i16"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
               %i16_t = OpTypeInt 16 0
             %v2i16_t = OpTypeVector %i16_t 2
      %u_sub_sat_fn_t = OpTypeFunction %void_t
               %i16_3 = OpConstant %i16_t 3
               %i16_4 = OpConstant %i16_t 4
             %v2i16_3 = OpConstantComposite %v2i16_t %i16_3 %i16_3
             %v2i16_4 = OpConstantComposite %v2i16_t %i16_4 %i16_4

; All functions
     %u_sub_sat_v2i16 = OpFunction %void_t None %u_sub_sat_fn_t
; CHECK: define spir_kernel void @u_sub_sat_v2i16()
                   %2 = OpLabel
                   %3 = OpExtInst %v2i16_t %1 u_sub_sat %v2i16_3 %v2i16_4
; CHECK: {{%.*}} = call spir_func <2 x i16> @_Z7sub_satDv2_tS_(<2 x i16> <i16 3, i16 3>, <2 x i16> <i16 4, i16 4>)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
