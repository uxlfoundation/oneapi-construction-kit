; RUN: %if online-spirv-as %{ spirv-as --target-env %spv_tgt_env -o %spv_file_s %s %}
; RUN: spirv-ll-tool -a OpenCL -b 64 %spv_file_s | FileCheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                        OpCapability Int8
                        OpCapability Vector16
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %u_shuffle_v16i8 "u_shuffle_v16i8"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
                %i8_t = OpTypeInt 8 0
             %v16i8_t = OpTypeVector %i8_t 16
      %u_shuffle_fn_t = OpTypeFunction %void_t
                %i8_3 = OpConstant %i8_t 3
                %i8_4 = OpConstant %i8_t 4
             %v16i8_3 = OpConstantComposite %v16i8_t %i8_3 %i8_3 %i8_3 %i8_3 %i8_3 %i8_3 %i8_3 %i8_3 %i8_3 %i8_3 %i8_3 %i8_3 %i8_3 %i8_3 %i8_3 %i8_3
             %v16i8_4 = OpConstantComposite %v16i8_t %i8_4 %i8_4 %i8_4 %i8_4 %i8_4 %i8_4 %i8_4 %i8_4 %i8_4 %i8_4 %i8_4 %i8_4 %i8_4 %i8_4 %i8_4 %i8_4

; All functions
     %u_shuffle_v16i8 = OpFunction %void_t None %u_shuffle_fn_t
; CHECK: define spir_kernel void @u_shuffle_v16i8()
                   %2 = OpLabel
                   %3 = OpExtInst %v16i8_t %1 shuffle %v16i8_3 %v16i8_4
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func <16 x i8> @_Z7shuffleDv16_hS_(<16 x i8> <i8 3, i8 3, i8 3, i8 3, i8 3, i8 3, i8 3, i8 3, i8 3, i8 3, i8 3, i8 3, i8 3, i8 3, i8 3, i8 3>, <16 x i8> <i8 4, i8 4, i8 4, i8 4, i8 4, i8 4, i8 4, i8 4, i8 4, i8 4, i8 4, i8 4, i8 4, i8 4, i8 4, i8 4>)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
