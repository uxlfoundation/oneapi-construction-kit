; RUN: %spirv-ll -a OpenCL -b 64 %spv_file_s | %filecheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                        OpCapability Int8
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %s_sub_sat_v4i8 "s_sub_sat_v4i8"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
                %i8_t = OpTypeInt 8 1
              %v4i8_t = OpTypeVector %i8_t 4
      %s_sub_sat_fn_t = OpTypeFunction %void_t
                %i8_3 = OpConstant %i8_t 3
                %i8_4 = OpConstant %i8_t 4
              %v4i8_3 = OpConstantComposite %v4i8_t %i8_3 %i8_3 %i8_3 %i8_3
              %v4i8_4 = OpConstantComposite %v4i8_t %i8_4 %i8_4 %i8_4 %i8_4

; All functions
      %s_sub_sat_v4i8 = OpFunction %void_t None %s_sub_sat_fn_t
; CHECK: define spir_kernel void @s_sub_sat_v4i8()
                   %2 = OpLabel
                   %3 = OpExtInst %v4i8_t %1 s_sub_sat %v4i8_3 %v4i8_4
; CHECK: {{%[a-zA-Z0-9]+}} = call spir_func <4 x i8> @_Z7sub_satDv4_cS_(<4 x i8> <i8 3, i8 3, i8 3, i8 3>, <4 x i8> <i8 4, i8 4, i8 4, i8 4>)
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
