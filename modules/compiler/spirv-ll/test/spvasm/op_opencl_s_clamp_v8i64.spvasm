; RUN: %if online-spirv-as %{ spirv-as --target-env %spv_tgt_env -o %spv_file_s %s %}
; RUN: %if online-spirv-as %{ spirv-val %spv_file_s %}
; RUN: spirv-ll-tool -a OpenCL -b 64 %spv_file_s | FileCheck %s
                        OpCapability Kernel
                        OpCapability Addresses
                        OpCapability Int64
                        OpCapability Vector16
                   %1 = OpExtInstImport "OpenCL.std"
                        OpMemoryModel Physical64 OpenCL
                        OpEntryPoint Kernel %s_clamp_v8i64 "s_clamp_v8i64"
                        OpSource OpenCL_C 102000

; All types, variables and constants
              %void_t = OpTypeVoid
               %i64_t = OpTypeInt 64 0
             %v8i64_t = OpTypeVector %i64_t 8
        %s_clamp_fn_t = OpTypeFunction %void_t
               %i64_1 = OpConstant %i64_t 1
               %i64_2 = OpConstant %i64_t 2
               %i64_3 = OpConstant %i64_t 3
             %v8i64_1 = OpConstantComposite %v8i64_t %i64_1 %i64_1 %i64_1 %i64_1 %i64_1 %i64_1 %i64_1 %i64_1
             %v8i64_2 = OpConstantComposite %v8i64_t %i64_2 %i64_2 %i64_2 %i64_2 %i64_2 %i64_2 %i64_2 %i64_2
             %v8i64_3 = OpConstantComposite %v8i64_t %i64_3 %i64_3 %i64_3 %i64_3 %i64_3 %i64_3 %i64_3 %i64_3

; All functions
       %s_clamp_v8i64 = OpFunction %void_t None %s_clamp_fn_t
; CHECK: define spir_kernel void @s_clamp_v8i64()
                   %2 = OpLabel
                   %3 = OpExtInst %v8i64_t %1 s_clamp %v8i64_1 %v8i64_2 %v8i64_3
; CHECK: = call spir_func <8 x i64> @_Z5clampDv8_lS_S_(<8 x i64> {{<(i64 1(, )?)+>|splat \(i64 1\)}}, <8 x i64> {{<(i64 2(, )?)+>|splat \(i64 2\)}}, <8 x i64> {{<(i64 3(, )?)+>|splat \(i64 3\)}})
                        OpReturn
; CHECK: ret void
                        OpFunctionEnd
; CHECK: }
